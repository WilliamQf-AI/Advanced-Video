                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_bigeye"/>
            <RadioButton
                android:id="@+id/rb_effect_smallface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_shrinkface"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_smallface"/>
            <RadioButton
                android:id="@+id/rb_effect_jaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_shrinkjaw"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_jaw"/>
            <RadioButton
                android:id="@+id/rb_effect_thinface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_thinface"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_thinface"/>
            <RadioButton
                android:id="@+id/rb_effect_faceruddy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_smooth"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_faceruddy"/>
            <RadioButton
                android:id="@+id/rb_effect_longnose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_thinnose"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_longnose"/>
            <RadioButton
                android:id="@+id/rb_effect_philtrum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_thinnose"
