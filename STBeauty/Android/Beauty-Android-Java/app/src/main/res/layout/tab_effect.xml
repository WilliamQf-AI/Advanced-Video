                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_eyecorner"/>
            <RadioButton
                android:id="@+id/rb_effect_vface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_thinface"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_vface"/>
            <RadioButton
                android:id="@+id/rb_effect_underjaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_shrinkjaw"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_underjaw"/>
            <RadioButton
                android:id="@+id/rb_effect_narrowface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_shrinkface"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_narrowface"/>
            <RadioButton
                android:id="@+id/rb_effect_cheekbone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_shrinkface"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_cheekbone"/>
            <RadioButton
                android:id="@+id/rb_effect_facesharpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/ic_effect_thinface"
                android:gravity="center"
                android:paddingLeft="@dimen/effect_btn_padding"
                android:paddingRight="@dimen/effect_btn_padding"
                android:textColor="@color/white"
                android:text="@string/effect_facesharpen"/>
        </com.netease.nmc.nertcsample.beauty.ui.NEBeautyRadioGroup>
    </HorizontalScrollView>
</LinearLayout>
